{
  "name": "herbert-web-socket-server",
  "version": "0.1.0",
  "private": true,
  "description": "A web socket server for environmental control.",
  "scripts": {
    "lint": "eslint . --fix --ext .ts",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "build": "tsc",
    "build:watch": "onchange 'src/**/*.ts' -- npm run build",
    "view:coverage": "serve coverage/lcov-report",
