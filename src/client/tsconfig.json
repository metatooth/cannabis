{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [],
    "lib": [
      "ES2019",
      "DOM",
    ],
    "outDir": "../../dist/client"
  },
  "include": [
    "**/*.ts",
    "**/*.vue"
  ],
  "exclude": [
    "**/*.test.ts"
  ],
  "references": [{ "path": "../shared" }]
}
