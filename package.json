{
  "name": "herbert",
  "version": "0.5.0",
  "description": "Environment Control System for Switch-Bot and WYZE",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix --ext .ts",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "build": "tsc",
    "build:watch": "onchange 'src/**/*.ts' -- npm run build",
    "view:coverage": "serve coverage/lcov-report",
    "clean": "rm -rf coverage src/**/*.js src/**/*.map",
    "start": "node src/index.js",
    "client": "node src/client.js",
    "client:watch": "onchange 'src/**/*.js' -- npm run client",
    "server": "node src/server.js",
    "server:watch": "onchange 'src/**/*.js' -- npm run server"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@abandonware/noble": "^1.9.2-10",
    "bufferutil": "^4.0.2",
    "config": "^3.3.3",
    "express": "^4.17.1",
    "lodash": "^4.17.20",
    "log4js": "^6.3.0",
    "mongoose": "^5.11.12",
    "node-switchbot": "^0.1.0",
    "redis": "^3.0.2",
    "sqlite3": "^5.0.0",
    "utf-8-validate": "^5.0.3",
    "ws": "^7.4.2",
    "wyze-node": "^2.0.3"
  },
  "devDependencies": {
    "@types/config": "0.0.37",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.17",
    "@types/source-map-support": "^0.5.3",
    "@types/sqlite3": "^3.1.6",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^26.6.3",
    "onchange": "^7.1.0",
    "serve": "^11.3.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
