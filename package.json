{
  "name": "herbert",
  "version": "0.6.0",
  "description": "Control your grow environment.",
  "main": "index.js",
  "engines": {
    "node": "12.16.1"
  },
  "scripts": {
    "test": "jest",
    "clean": "rm -rf dist",
    "lint": "vue-cli-service lint",
    "serve:client": "vue-cli-service serve src/client/main.ts",
    "serve:server": "tsc-watch --noClear -b ./src/server/tsconfig.json --onSuccess \"node --enable-source-maps index.js\"",
    "serve:worker": "tsc-watch --noClear -b ./src/worker/tsconfig.json --onSuccess \"node --enable-source-maps worker.js\"",
    "build:client": "vue-cli-service build src/client/main.ts",
    "build:server": "tsc -b src/server",
    "build:worker": "tsc -b src/worker",
    "serve": "concurrently --prefix \"[{name}]\" --names \"SERVER,WORKER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold,bgRed.bold\" \"npm run serve:server\" \"npm run serve:worker\" \"npm run serve:client\"",
    "build": "concurrently --prefix \"[{name}]\" --names \"SERVER,WORKER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold,bgRed.bold\" \"npm run build:server\" \"npm run build:worker\" \"npm run build:client\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metatooth/herbert.git"
  },
  "license": "MIT",
  "author": "Terry Lorber",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/vue-fontawesome": "^2.0.2",
    "bulma": "^0.9.2",
    "config": "^3.3.3",
    "core-js": "^3.6.5",
    "express": "^4.17.1",
    "log4js": "^6.3.0",
    "node-switchbot": "^1.0.0",
    "sqlite3": "^5.0.1",
    "tslib": "^2.1.0",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.3",
    "vue-property-decorator": "^9.1.2",
    "ws": "^7.4.3",
    "wyze-node": "^2.0.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "concurrently": "^5.3.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "prettier": "^1.19.1",
    "sass-loader": "^10.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "~3.9.3",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.46.0"
  }
}
